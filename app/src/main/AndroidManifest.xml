<?xml version="1.0" encoding="utf-8"?>
<manifest package="hua.dit.mob_dev_project"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <queries>
        <!-- Declare intent for map-related activities -->
        <intent>
            <action android:name="android.intent.action.VIEW"/>
            <data android:scheme="geo" />
        </intent>

        <!-- Explicitly query Google Maps by package name -->
        <package android:name="com.google.android.apps.maps"/>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MOB_DEV_PROJECT"
        tools:targetApi="31"
        android:hardwareAccelerated="true">
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activity.AddActivity"/>
        <activity android:name=".Activity.DeleteActivity"/>
        <activity android:name=".Activity.EditActivity"/>
        <activity android:name=".Activity.ViewAllTasksActivity"/>
        <activity android:name=".Activity.ViewIncompleteTasksActivity"/>

    </application>

</manifest>